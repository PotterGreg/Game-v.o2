<html>
  <head>
    <title> Indiana Jones Text Adventure </title
      <meta http-equiv="Content-Type" 
   content="text/html;charset=utf-8" />
      <script type="text/javascript">
        
        var currLoc = 0;
        var playerScore = 5;
        var hasVisitedRoom0 = true;
        var hasVisitedRoom1 = true;
        var hasVisitedRoom2 = true;
        var hasVisitedRoom3 = true;
        
        function dispmsg(msg) { 
        var target = document.getElementById("txtAnswer");
        target.value += msg+"\n";
        }
        
        function btnNorth_click() {
        if (currLoc === 0) { 
        currLoc = 1; 
        dispmsg("\n north room");   
        } else { 
        if (currLoc === 3) { 
        currLoc=0; 
        dispmsg("\n start room");
        } else { 
        dispmsg("You cannot go north");
             }
    }
  
        if (hasVisitedRoom0 === true) { hasVisitedRoom0 === false; dispmsg("Player Score:"+(playerScore)); } 
        
  }
  
        function btnSouth_click() { 
        if (currLoc === 0) { 
        currLoc = 3;
        dispmsg("south room"); 
        } else { 
        if(currLoc===1) { 
        currLoc = 0; 
        dispmsg("start room"); 
        } else{ 
        dispmsg("You can't go here"); 
          }
      }
        if (hasVisitedRoom1 === true) { hasVisitedRoom1 === false; dispmsg("Player score:"+(playerScore+5)); }
    }
    
        function btnEast_click() {
        if (currLoc === 0) { 
        currLoc = 2; 
        dispmsg("East room"); 
        } else { 
        dispmsg("you cant go here"); 
      }
        
        if (hasVisitedRoom2 === true) { hasVisitedRoom2 === false; dispmsg("Player score:"+(playerScore+5+5)); }
        
    }
    
    
    
        function btnWest_click() { 
        if (currLoc === 0) { 
        dispmsg("you cant go here"); 
        } else { currLoc === 2;
        dispmsg("start room") }
        
        if (hasVisitedRoom3 === true) { hasVisitedRoom3 === false; dispmsg("Player score:"+(playerScore+5+5+5)); }
        
        }
    
      </script>
  </head>
<body>
  <p style="font-size: 30px; color:Red"> <strong> Adventures of Indiana Jones </strong> </p>  
    
     
    
    <textarea rows="10" cols="50" id="txtAnswer">You are standing in a dark cave and you see many torches dimly lit. You hear slithering, you do not like  this. 
Score: 5 </textarea>
   
    
    
<p>  <input type="button"
           value="North"
           onclick="btnNorth_click();" />
          
     <input type="button"
           value="East"
           onclick="btnEast_click();" />
          
     <input type="button"
           value="South"
           onclick="btnSouth_click();" />
        
     <input type="button"
           value="West"
           onclick="btnWest_click();" /> </p>
   
