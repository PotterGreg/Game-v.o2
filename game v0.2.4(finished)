      <script type="text/javascript">
        
        var currLoc = 0;
        var playerScore = 0;
        var hasVisitedRoom0 = false;
        var hasVisitedRoom1 = false;
        var hasVisitedRoom2 = false;
        var hasVisitedRoom3 = false;
        
        function dispmsg(msg) { 
        var target = document.getElementById("txtAnswer");
        target.value += msg+"\n";
        }
         
        function playerScoreBox(score) {
        document.getElementById("txtCommand").value;
        
        function btnNorth_click() {
          if (currLoc === 0) { 
             currLoc = 1; 
             dispmsg("north room");
          if (! hasVisitedRoom1) { 
            hasVisitedRoom1 = true;
            playerScore += 5;
            dispmsg("playerScore:"+playerScore);  
            } 
          } else { 
          if (currLoc === 3) { 
                currLoc=0;
                dispmsg("start room"); 
          if (! hasVisitedRoom0) {
            hasVisitedRoom0 = true;
            playerScore += 5;
            dispmsg("playerscore:"+playerScore);}
            
             } else { 
                dispmsg("You cannot go north");
           }
          }
         }
        
        
       
        
        function btnSouth_click() { 
          if (currLoc === 0) { 
            currLoc = 3;
            dispmsg("south room");
          if (! hasVisitedRoom3) {
            hasVisitedRoom3 = true;
            playerScore = playerScore+5; 
            }
            dispmsg("playerScore:"+playerScore); 
            } 
         else { 
          if(currLoc===1) { 
            currLoc = 0; 
            dispmsg("start room"); 
          if (! hasVisitedRoom0) {
            hasVisitedRoom0 = true;
            playerScore = playerScore+5; 
            dispmsg("playerScore:"+playerScore); }             
        } else{ 
            dispmsg("You can't go here"); 
        }
       }
      }
     
    
         
        function btnEast_click() {
          if (currLoc === 0) { 
            currLoc = 2; 
            dispmsg("East room");
          if (! hasVisitedRoom2) {
            hasVisitedRoom2 = true;
            playerScore = playerScore+5;
            dispmsg("playerScore:"+playerScore); 
        }
        } else { 
           dispmsg("you cant go here"); 
     }
    }
   
    
        function btnWest_click() { 
          if (currLoc === 2) { 
            currLoc=0;
            dispmsg("start room"); 
           if (! hasVisitedRoom2) {
          hasVisitedRoom2 = true;
          playerScore = playerScore+5;
          dispmsg("playerScore:"+playerScore);
          }
        } else { 
            dispmsg("you cant go here") }
       } 
       
     
    
      </script>
